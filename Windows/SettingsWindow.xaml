<Window x:Class="QuickGridLauncher.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QuickGridLauncher Settings"
        Width="500"
        Height="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <!-- Appearance Settings -->
            <GroupBox Header="Appearance">
                <StackPanel>
                    <!-- Columns -->
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Grid Columns:"/>
                        <TextBox x:Name="ColumnsTextBox" Grid.Column="1" Text="4"/>
                    </Grid>

                    <!-- Background Color -->
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Background Color:"/>
                        <TextBox x:Name="BackgroundColorTextBox" Grid.Column="1" Text="#1E1E1E"/>
                        <Border Grid.Column="2" Width="30" Height="30" CornerRadius="4" Margin="5,0,0,0"
                                Background="{Binding ElementName=BackgroundColorTextBox, Path=Text, FallbackValue=#1E1E1E}"
                                BorderBrush="#999" BorderThickness="1"/>
                    </Grid>

                    <!-- Background Opacity -->
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Background Opacity:"/>
                        <Slider x:Name="OpacitySlider" 
                                Grid.Column="1" 
                                Minimum="0.1" 
                                Maximum="1.0" 
                                Value="0.8"
                                TickFrequency="0.1"
                                IsSnapToTickEnabled="True"
                                VerticalAlignment="Center"
                                ValueChanged="OpacitySlider_ValueChanged"/>
                        <TextBlock x:Name="OpacityValueText" 
                                   Grid.Column="2" 
                                   Text="80%" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   FontWeight="Bold"/>
                    </Grid>

                    <!-- Highlight Color -->
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Highlight Color:"/>
                        <TextBox x:Name="HighlightColorTextBox" Grid.Column="1" Text="#7A3CFF"/>
                        <Border Grid.Column="2" Width="30" Height="30" CornerRadius="4" Margin="5,0,0,0"
                                Background="{Binding ElementName=HighlightColorTextBox, Path=Text, FallbackValue=#7A3CFF}"
                                BorderBrush="#999" BorderThickness="1"/>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- Hotkey Settings -->
            <GroupBox Header="Hotkey">
                <StackPanel>
                    <TextBlock x:Name="CurrentHotkeyText" Text="Current: Alt + Shift + Space" FontWeight="Bold" Margin="0,0,0,10"/>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Modifiers:"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <CheckBox x:Name="AltCheckBox" Content="Alt" Margin="0,0,15,0" IsChecked="True" Checked="UpdateHotkeyPreview" Unchecked="UpdateHotkeyPreview"/>
                            <CheckBox x:Name="CtrlCheckBox" Content="Ctrl" Margin="0,0,15,0" Checked="UpdateHotkeyPreview" Unchecked="UpdateHotkeyPreview"/>
                            <CheckBox x:Name="ShiftCheckBox" Content="Shift" IsChecked="True" Checked="UpdateHotkeyPreview" Unchecked="UpdateHotkeyPreview"/>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Key:"/>
                        <ComboBox x:Name="KeyComboBox" Grid.Column="1" SelectionChanged="UpdateHotkeyPreview">
                            <ComboBoxItem Content="Space" IsSelected="True" Tag="0x20"/>
                            <ComboBoxItem Content="A" Tag="0x41"/>
                            <ComboBoxItem Content="C" Tag="0x43"/>
                            <ComboBoxItem Content="Q" Tag="0x51"/>
                            <ComboBoxItem Content="S" Tag="0x53"/>
                            <ComboBoxItem Content="W" Tag="0x57"/>
                            <ComboBoxItem Content="Z" Tag="0x5A"/>
                            <ComboBoxItem Content="F1" Tag="0x70"/>
                            <ComboBoxItem Content="F2" Tag="0x71"/>
                            <ComboBoxItem Content="F3" Tag="0x72"/>
                        </ComboBox>
                    </Grid>

                    <TextBlock Text="Note: Changing the hotkey requires restarting the app" 
                               FontStyle="Italic" FontSize="11" Foreground="#666" Margin="0,10,0,0"/>
                </StackPanel>
            </GroupBox>

            <!-- Startup Settings -->
            <GroupBox Header="Startup">
                <StackPanel>
                    <CheckBox x:Name="StartupCheckBox" Content="Run on Windows startup"/>
                </StackPanel>
            </GroupBox>

            <!-- Application List -->
            <GroupBox Header="Applications">
                <StackPanel>
                    <ListBox x:Name="AppListBox" Height="150" Margin="0,0,0,10"
                             AllowDrop="True"
                             PreviewMouseLeftButtonDown="AppListBox_PreviewMouseLeftButtonDown"
                             PreviewMouseMove="AppListBox_PreviewMouseMove"
                             DragEnter="AppListBox_DragEnter"
                             Drop="AppListBox_Drop">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="AddButton" Content="Add App" Width="80" Margin="0,0,10,0" Click="AddButton_Click"/>
                        <Button x:Name="RemoveButton" Content="Remove" Width="80" Click="RemoveButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button x:Name="SaveButton" Content="Save" Width="80" Margin="0,0,10,0" Click="SaveButton_Click"/>
                <Button x:Name="CancelButton" Content="Cancel" Width="80" Click="CancelButton_Click"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Window>
